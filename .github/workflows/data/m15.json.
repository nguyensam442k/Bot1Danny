name: Fetch CryptoCompare m15

on:
  schedule:
    - cron: "*/5 * * * *"   # chạy tự động mỗi 5 phút (UTC)
  workflow_dispatch:        # cho phép bấm Run workflow thủ công

# Cho phép workflow commit/push vào repo
permissions:
  contents: write

jobs:
  fetch:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install dependencies
        run: |
          if [ -f package-lock.json ]; then
            npm ci
          else
            npm i
          fi

      - name: Fetch & build data
        env:
          CC_KEY: ${{ secrets.CRYPTOCOMPARE_KEY }}   # đặt secret này trong repo settings
        run: |
          node scripts/fetch-cc.js

      - name: Commit & push if data changed
        run: |
          if [[ -n "$(git status --porcelain data)" ]]; then
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add data/*.json
            git commit -m "data: update m15 $(date -u +'%Y-%m-%dT%H:%M:%SZ')"
            git push
          else
            echo "No changes to commit."
          fi
